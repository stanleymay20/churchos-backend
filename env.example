# CHURCHOS Backend Environment Variables
# Sacred Operating System for Prophetic Church Governance

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/churchos

# Firebase Authentication
FIREBASE_SERVICE_ACCOUNT_PATH=path/to/serviceAccountKey.json
FIREBASE_PROJECT_ID=your_firebase_project_id

# OpenAI Integration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_make_it_long_and_secure
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Stripe Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/churchos.log

# Security
CORS_ORIGINS=http://localhost:3000,https://churchos.app
SECRET_KEY=your_secret_key_here_make_it_long_and_secure

# Development
DEBUG=True
ENVIRONMENT=development 